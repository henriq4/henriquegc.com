---
import * as Icon from "@astropub/icons";
import { Image } from "astro:assets";

interface Props {
  tag: string;
  title: string;
  description: string;
  date: string;
  imageSource: string;
  imageAlt: string;
  href: string;
}

const { tag, title, description, date, href, imageSource, imageAlt } =
  Astro.props;
---

<div class="col-span-1 bg-blue-50 w-full rounded-xl p-4">
  <a href={href}>
    <Image
      src={imageSource}
      alt={imageAlt}
      width="1000"
      height="1000"
      class="rounded-lg"
    />
  </a>

  <p class="mt-3 mb-2 text-sm">{tag}</p>

  <a href="#">
    <h5 class="mb-3 text-xl">{title}</h5>
  </a>

  <p class="">
    {description}
  </p>

  <span class="flex items-center justify-center mt-6 gap-2">
    <Icon.Calendar size="18" />

    <p class="text-xs">{date}</p>
  </span>
</div>
