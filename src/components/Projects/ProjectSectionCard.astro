---
import * as Icon from "@astropub/icons";
import { Image } from "astro:assets";

interface Props {
  tag: string;
  title: string;
  description: string;
  imageSource: string;
  imageAlt: string;
  href: string;
}

const { tag, title, description, href, imageSource, imageAlt } = Astro.props;
---

<div
  class="w-full h-full bg-blue-50 rounded-xl grid grid-cols-1 lg:grid-cols-3 space-x-12 lg:pt-8"
>
  <div
    class="col-span-1 flex-1 flex items-start justify-between flex-col my-16 ml-12"
  >
    <div class="flex flex-col gap-2">
      <span>{tag}</span>

      <h4 class="text-2xl">{title}</h4>

      <p class="text-slate-700 mt-2">
        {description}
      </p>
    </div>

    <a href={href} class="text-blue-600 flex items-center gap-2">
      <span class="flex gap-2"> View Proejct </span>
      <Icon.ArrowTopRight size="18" />
    </a>
  </div>

  <div
    class="col-span-1 md:col-span-2 flex flex-1 items-end lg:mt-8 justify-end rounded-tl-xl rounded-br-xl overflow-hidden"
  >
    <a href={href}>
      <Image
        src={imageSource}
        alt={imageAlt}
        class="rounded-tl-xl rounded-br-xl transition-transform duration-500 ease-in-out transform hover:scale-105"
        width="1000"
        height="1000"
      />
    </a>
  </div>
</div>
